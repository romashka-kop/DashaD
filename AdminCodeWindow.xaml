<Window x:Class="DashaD.AdminCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подтверждение роли Админ" 
        Width="300" Height="150" 
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <TextBlock Text="Введите код администратора:" Margin="0,0,0,10"/>
        <PasswordBox x:Name="CodeInput" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" Focusable="True"/>
        <Button Content="Отправить" Width="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="Submit_Click"/>
    </Grid>
</Window>
