<Window x:Class="DashaD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DashaD"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Grid.Row="1" x:Name="ViewPatents" Content="Патенты" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="202" Click="ViewPatents_Click"/>
        <Button Grid.Column="0" Grid.Row="2" x:Name="ViewAuthors" Content="Авторы" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="202" Click="ViewAuthors_Click"/>
        <Button Grid.Column="0" Grid.Row="3" x:Name="ViewBid" Content="Заявки" HorizontalAlignment="Left" Height="47" VerticalAlignment="Top" Width="202" Click="ViewBid_Click"/>
        <Button x:Name="SettingsPatent" Content="Выйти из аккаунта" Grid.Column="5" Grid.Row="0" HorizontalAlignment="Right" Margin="15"
                Height="50" VerticalAlignment="Center" Width="150" Click="SettingsPatent_Click" FontSize="15"/>
        <Frame x:Name="MainFrame" Background="LightGray" BorderBrush="Black" BorderThickness="3" NavigationUIVisibility="Hidden" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="8" Margin="15"/>
        <Frame x:Name="Input" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="6" Grid.RowSpan="9" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
